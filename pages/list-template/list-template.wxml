<!--pages/list-template/list-template.wxml-->
 <template name='listTemplate'>
  <view class='listContainer'>
  <view class='header'>
    <image src='{{avatar}}'></image>
    <text>{{author}} {{date}}</text>
  </view>
  <text class='littleText'>{{detail}}</text>
  <image class='bigImg' src='{{headImgSrc}}'></image>
  <text class='manyText'>{{detail_content}}</text>
  <view class='starView'>
    <image src='{{detail_love_image1}}'></image>
    <text>{{love_count}}</text>
    <image src='{{detail_love_image2}}'></image>
    <text>{{attention_count}}</text>
  </view>
</view>
</template> 

